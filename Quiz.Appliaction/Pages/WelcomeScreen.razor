@page "/"
@inject NavigationManager NavigationManager
@inject IJSRuntime Js

<style>
    body {
        background-color: rgba(126, 132, 250, 0.2);
    }
</style>

<h1>Witamy w Quizie!</h1>
<br/>
<p>Weź udział w ekscytującym teście!</p>
<p>Sprawdź swoją wiedzę,</p>
<p>a przede wszystkim...</p>
<p>Baw się dobrze! :) </p>
<br/>
<button class="btn btn-primary" @onclick="StartQuiz">Przejdź dalej</button>

@code {

    private async Task StartQuiz()
    {
        await Js.InvokeVoidAsync("localStorage.setItem", "_cookiecategory6", "100");
        NavigationManager.NavigateTo("/rules");  
    }
}